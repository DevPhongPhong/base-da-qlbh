@model Entities.DTOs.AccountRegisterDTO
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 a-left">
                <ul class="breadcrumb">
                    <li class="home">
                        <a href="/"><span>Trang chủ</span></a>
                        <span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>
                    </li>

                    <li><strong><span>Đăng ký tài khoản</span></strong></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<div class="container margin-bottom-20">
    <h1 class="title-head"><a href="#">Đăng ký tài khoản</a></h1>
    <div class="row">
        <div class="col-lg-12 ">
            <div class="page-login">
                <div id="login">
                    <span>Nếu chưa có tài khoản vui lòng đăng ký tại đây</span>

                    <form method="post" action="@Url.ActionLink("Register")" asp-antiforgery="true"
                        id="customer_register" accept-charset="UTF-8">
                        <input name="FormType" type="hidden" value="customer_register"><input name="utf8" type="hidden"
                            value="true"><input type="hidden" id="Token-f6b6b6b97bc8491d8e0ec8e2b5705d75" name="Token">
                        <script src="js/api.js"></script>
                        <script>grecaptcha.ready(function () { grecaptcha.execute("6Ldtu4IUAAAAAMQzG1gCw3wFlx_GytlZyLrXcsuK", { action: "customer_register" }).then(function (token) { document.getElementById("Token-f6b6b6b97bc8491d8e0ec8e2b5705d75").value = token }); });</script>
                        <div class="form-signup">

                        </div>
                        <div class="form-signup clearfix">
                            <input type="text" asp-for="Username" placeholder="Tên đăng nhập (bắt buộc)">
                            <input type="password" asp-for="Password" placeholder="Mật khẩu (bắt buộc)">
                            <input type="password" asp-for="RePassword" placeholder="Nhập lại mật khẩu (bắt buộc)">
                            <input asp-for="FullName" placeholder="Họ và tên (bắt buộc)" type="text">
                            <div class="row">
                                <div class="col-md-6">
                                    <select class="form-control" asp-for="Gender" aria-label="Giới tính (bắt buộc)">
                                        <option class="optionForm" value="3">Chọn giới tính</option>
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                        <option value="3">Khác</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <input type="date" asp-for="Birthday" class="form-control"
                                        placeholder="Ngày sinh (bắt buộc)">
                                </div>
                            </div>
                            <br />
                            <input type="text" asp-for="Address" placeholder="Địa chỉ (bắt buộc)">
                            <div class="row">
                                <div class="col-md-6">
                                    <input asp-for="Email" placeholder="Email (bắt buộc)" type="email">
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Phone" placeholder="Số điện thoại (bắt buộc)" type="tel">
                                </div>
                            </div>
                            @if (ViewData["Error"] != null)
                            {
                                <div class="alert-danger p-2 mb-3">@ViewData["Error"].ToString()</div>
                            }
                            <span></span>
                            <div class="button-box text-center">
                                <button class="btn btn-primary" type="submit"><span>Đăng ký</span></button>
                                <a href="/dang-nhap"><span>Đăng nhập</span></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>