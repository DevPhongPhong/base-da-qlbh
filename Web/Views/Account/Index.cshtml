@model Entities.Models.Accounts
@{
    ViewData["Title"] = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<span></span>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="panel-body">
            <!--CartInfo start-->
            <div class="card" style="width: 100%;">
                <div class="card-header">
                    <h4>Tài khoản</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-sm-8">
                                <button class="btn btn-primary" style="background:#ffffff;color:red" type="button">Cập nhật thông tin chi tiết tài khoản</button>
                            </div>
                            <div class="billing-btn">
                                <div class="col-sm-2">
                                    <a class="btn btn-primary" href="@Url.Action("ChangePass")">Đổi mật khẩu</a>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="billing-back-btn" style="float:right">
                                    <div class="billing-btn">
                                        <a class="btn btn-primary" id="listorderreceived" href="@Url.Action("ListOrderReceived", "Cart")">Danh sách đơn hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <form method="post" class="subscribe-popup-form" action="@Url.ActionLink("Index")" asp-antiforgery="true">
                            <div class="myaccount-info-wrapper billing-info-wrap">
                                <div class="account-info-wrapper">
                                    <div class="row">
                                    </div>
                                </div>

                                @Html.HiddenFor(x => x.Id)
                                @Html.HiddenFor(x => x.CreateDate)
                                @Html.HiddenFor(x => x.CreateBy)
                                @Html.HiddenFor(x => x.IsActive)
                                @Html.HiddenFor(x => x.Username)
                                @Html.HiddenFor(x => x.Password)
                                @if (ViewData["Error"] != null)
                                {
                                    <div class="alert alert-danger p-2 mb-2">@ViewData["Error"].ToString()</div>
                                }
                                @if (ViewData["Success"] != null)
                                {
                                    <div class="alert alert-success p-2 mb-2">@ViewData["Success"].ToString()</div>
                                }
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info">
                                            <label>Tên đăng nhập</label>
                                            <input type="text" asp-for="Username" disabled>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info">
                                            <label>Họ và tên</label>
                                            <input type="text" asp-for="FullName" required="true">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="billing-info">
                                            <label>Giới tính</label>
                                            <select asp-for="Gender" placeholder="Giới tính" style="width: 100%; border: 1px solid #cacaca; border-radius: 50px; padding: 12px 18px; font-size: 14px; color: #7a7a7a; margin: 25px 0 10px 0;">
                                                <option value="3">Chọn giới tính</option>
                                                <option value="1">Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="3">Khác</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="billing-info">
                                            <label>Ngày sinh</label>
                                            <input type="date" asp-for="Birthday" placeholder="Ngày sinh" required="true">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="billing-info">
                                            <label>Địa chỉ</label>
                                            <input type="text" asp-for="Address" placeholder="Địa chỉ" required="true">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info">
                                            <label>Email</label>
                                            <input type="email" asp-for="Email" placeholder="Email" required="true" type="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info">
                                            <label>Số điện thoại</label>
                                            <input type="tel" asp-for="Phone" placeholder="Số điện thoại" required="true">
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-md-10"></div>
                                    <div class="col-md-2">
                                        <button class="btn btn-primary" type="submit">Cập nhật</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
            <!--CartInfo end-->
        </div>
    </div>
</div>
<div class="col-2"></div>