<!-- Start News Section -->
@if (listNewsHomeHot?.Count > 0)
{
    <section class="news-section pb_small">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="title text-center">
                        <h4>Tin tức mới nhất</h4>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                @foreach (var item in listNewsHomeHot)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="news-box">
                            <div class="news-img">
                                <img src="@item.ThumbImage" alt="news-img">
                                <div class="date-box text-center text-uppercase">
                                    <h5>@item.PostedDate.Value.Day <br>@item.PostedDate.Value.ToString("MMM") </h5>
                                </div>
                            </div>
                            <div class="news-info text-center">
                                <h5><a href="@Url.Action("NewsDetail","Home",new { id = item.Id})">@item.Title</a></h5>
                                <p class="comments">Đăng bởi: <a href="#"><i>@item.Author</i></a></p>
                                <p class="news-text">@item.SubTitle</p>
                                <a href="@Url.Action("NewsDetail","Home",new { id = item.Id})" class="read-more">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
