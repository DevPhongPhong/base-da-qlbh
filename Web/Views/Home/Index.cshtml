@{
    ViewData["Title"] = "Trang chủ";
}
@{
    var listHomeHot = (List<Entities.DTOs.ProductViewModel>)ViewBag.ListHomeHot;
    var listHome = (List<Entities.DTOs.ProductViewModel>)ViewBag.ListHome;
    var listNewsHomeHot = (List<Entities.DTOs.NewsViewModel>)ViewBag.NewsHomeHot;
    var listHomeHotProductCate = (List<Entities.DTOs.ProductCategoryViewModel>)ViewBag.HotCategoryProduct;
    var listProductCategoryShowOnHome = (List<Entities.DTOs.ProductCategoryShowOnHome>)ViewBag.ProductCategoryShowOnHome;
}

<!-- Start Slider Section -->
<section class="slider pt-0">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <!--Img of slide start-->
            <div class="carousel-item slider-area background_bg" data-img-src="assets/images/slider-img-1.jpg" style="background: url(&quot;assets/images/slider-img-1.jpg&quot;) center center / cover;">
                <!--Img of slide end-->
                <div class="banner_slide_content left-align">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7 col-9">
                                <div class="slider-caption">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Img of slide start-->
            <div class="carousel-item slider-area background_bg active" data-img-src="assets/images/slider-img-2.jpg" style="background: url(&quot;assets/images/slider-img-2.jpg&quot;) center center / cover;">
                <!--Img of slide end-->
                <div class="banner_slide_content right-align">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7 col-9">
                                <div class="slider-caption text-right">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Img of slide start-->
            <div class="carousel-item slider-area background_bg" data-img-src="assets/images/slider-img-3.jpg" style="background: url(&quot;assets/images/slider-img-3.jpg&quot;) center center / cover;">
                <!--Img of slide end-->
                <div class="banner_slide_content center-align">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-7 col-9">
                                <div class="slider-caption text-center">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleControls" data-slide-to="0" class=""></li>
            <li data-target="#carouselExampleControls" data-slide-to="1" class="active"></li>
            <li data-target="#carouselExampleControls" data-slide-to="2"></li>
        </ol>
    </div>
</section>
<!-- End Slider Section -->
<!-- Start Offer Banner Section -->
<section class="offer-banners">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-4 text-center">
                <a href="" class="offer-banner same-hover"><img src="/assets/images/offer-banner-1.jpg" alt="offer-banner"></a>
            </div>
            <div class="col-sm-4 text-center">
                <a href="" class="offer-banner same-hover"><img src="/assets/images/offer-banner-2.jpg" alt="offer-banner"></a>
            </div>
            <div class="col-sm-4 text-center">
                <a href="" class="offer-banner same-hover"><img src="/assets/images/offer-banner-3.jpg" alt="offer-banner"></a>
            </div>
        </div>
    </div>
</section>
<!-- End Offer Banner  Section -->
<!-- Start Popular Products Section -->
@if (listHome?.Count > 0)
{
    <section class="popular-products">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="title text-center">
                        <h4>Sản phẩm mới</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="products-slider4 same-nav owl-carousel owl-theme owl-loaded owl-drag" data-margin="30" data-dots="false" data-nav="true">
                        <div class="owl-stage-outer owl-height" style="height: 352px;">
                            <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 1920px;">
                                @foreach (var item in listHomeHot)
                                {
                                    <div class="owl-item active" style="width: 210px; margin-right: 30px;">
                                        <div class="item">
                                            <div class="saller-box common-cart-box">
                                                <div class="saller-img common-cart-img">
                                                    <img src="@item.MainImageThumb" alt="Saller-img">
                                                    <div class="hover-option">
                                                        <div class="add-cart-btn">
                                                            <button type="button" onclick="addToCart(@item.Id)" data-id="@item.Id" class="btn btn-primary">Thêm vào giỏ hàng</button>
                                                        </div>
                                                        <ul class="hover-icon">
                                                            @*<li><a href="#"><i class="fa fa-heart"></i></a></li>*@
                                                            @*<li><a href="#test-popup3" class="quickview-popup-link"><i class="fa fa-eye"></i></a></li>*@
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="saller-info common-cart-info text-center">
                                                    <a href="@Url.Action("ProductDetails","Home",new {  id = item.Id, color = 1,  length = 1,  quantity=1})" class="cart-name">@item.Name</a>
                                                    <p class="cart-price">
                                                        @if (item.IsPromote)
                                                        {
                                                            <del>@item.Price?.ToString("N0") đ</del>
                                                            @item.PromotionPrice?.ToString("N0")
                                                        }
                                                        else
                                                        {
                                                            @item.Price?.ToString("N0")
                                                        }
                                                        đ
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div><div class="owl-nav">
                            <button type="button" role="presentation" class="owl-prev disabled">
                                <i class="fa fa-angle-left"></i>
                            </button><button type="button" role="presentation" class="owl-next"><i class="fa fa-angle-right"></i></button>
                        </div><div class="owl-dots disabled"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- End Popular Products Section -->
