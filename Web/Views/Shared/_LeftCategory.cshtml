@{
    var listProductCate = (List<Entities.DTOs.ProductCategoryViewModel>)TempData["productmenu"];
}
<!--Filter Category area start-->
@if (listProductCate?.Count > 0)
{

    <div class="side-quantity-box side-box">
        <div class="side-box-title">
            <h6>Danh mục sản phẩm</h6>
        </div>
        <div class="quantity-box-detail">
            <ul>
                @foreach (var item in listProductCate.ToList())
                {
                    if (item.CountProduct > 0)
                    {
                        <li><a href="@Url.Action("Product", "Home", new { id = item.Id, page = 1 })">@item.CategoryName<span>(@item.CountProduct)</span></a></li>
                    }
                }
            </ul>
        </div>
    </div>
}
<!--Filter Category area end-->
