    <script type="text/javascript">
        function addtocart(productId, quantity) {
            $.ajax({
                url: '/add-to-cart',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    // Check if the operation was successful
                    if (response.success) {
                        alert(response.message);  // Show success message
                    } else {
                        alert(response.message);  // Show error message from the response
                    }
                    loadCart();
                },
                error: function (xhr, status, error) {
                    // Handle error
                    alert('Thêm sản phẩm không thành công');
                }
            });
        }

        function loadCart() {
            $.ajax({
                url: '/getdatacart',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        let cart = response.cart;
                        let itemList = $('#cart-sidebar .list-item ul');
                        itemList.empty(); // Clear the current list
                        if (cart.length == 0) {
                             itemList.append(`
                            <li class="item">
                                <div class="product-info" style="display: flex;">
                                   Không có sản phẩm
                                </div>
                            </li>
                        `);
                        }
                        let totalAmount = 0;
                        let totalCount = cart.length;

                        cart.forEach(item => {
                            let product = item.Product;
                            let quantity = item.Quantity;
                            let price = (product.IsPromote && product.PromotionPrice ? product.PromotionPrice : product.Price) * quantity;
                            totalAmount += price;

                            itemList.append(`
                            <li class="item">
                                <div class="product-info" style="display: flex;">
                                    <img class="lazyload loading" style="max-width: 100px;" src="/${product.MainImageThumb}">
                                    <span class="product-name">${product.Name}</span>
                                    <span class="product-quantity">Số lượng: ${quantity}</span>
                                    <span class="product-price">Giá: ${price.toLocaleString()} đ</span>
                                </div>
                            </li>
                        `);
                        });

                        $('#cart-sidebar .top-subtotal .price').text(`${totalAmount.toLocaleString()} đ`);
                        $('.count_item, .count_item_pr').text(totalCount);
                    } else {
                        debugger
                        let itemList = $('#cart-sidebar .list-item ul');
                        itemList.empty(); // Clear the current list
                        itemList.append(`
                            <li class="item">
                                <div class="product-info" style="display: flex;">
                                   Không có sản phẩm
                                </div>
                            </li>
                        `);
                    }
                },
                error: function (xhr, status, error) {
                    debugger
                    let itemList = $('#cart-sidebar .list-item ul');
                        itemList.empty(); // Clear the current list
                        itemList.append(`
                            <li class="item">
                                <div class="product-info" style="display: flex;">
                                    Không có sản phẩm
                                </div>
                            </li>
                        `);
                }
            });
        }

        // Call the function to load the cart data when the page is ready
        $(document).ready(function () {
            loadCart();
        });

    </script>
