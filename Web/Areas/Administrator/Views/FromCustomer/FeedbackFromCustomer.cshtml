@model IEnumerable<Entities.Models.Feedback>
@{
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
    int type = ViewBag.Type;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button class="btn btn-success float-left" onclick="exportExcel()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-spreadsheet" viewBox="0 0 16 16">
                        <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V9H3V2a1 1 0 0 1 1-1h5.5v2zM3 12v-2h2v2H3zm0 1h2v2H4a1 1 0 0 1-1-1v-1zm3 2v-2h3v2H6zm4 0v-2h3v1a1 1 0 0 1-1 1h-2zm3-3h-3v-2h3v2zm-7 0v-2h3v2H6z" />
                    </svg>
                    &nbsp;
                    Xuất Excel
                </button>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12">
                            
                            <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">STT</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Người gửi</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Email</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Số điện thoại</th>
                                        @if (type == 0)
                                        {
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Mã sản phẩm</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Mã tin tức</th>
                                        }
                                        else if (type == 1)
                                        {

                                        }
                                        else if (type == 2)
                                        {
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Mã sản phẩm</th>
                                        }
                                        else if (type == 3)
                                        {
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Mã tin tức</th>
                                        }
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Chủ đề</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Lời nhắn</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Loại</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Trạng thái</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Được hiển thị</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">Thao tác</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model?.Count() > 0)
                                        {
                                            var id = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr role="row">
                                                    <td>@id</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.PhoneNumber</td>
                                                    @if (type == 0)
                                                    {
                                                        <td>@item.ProductID</td>
                                                        <td>@item.NewsID</td>
                                                    }
                                                    else if (type == 1)
                                                    {

                                                    }
                                                    else if (type == 2)
                                                    {
                                                        <td>@item.ProductID</td>
                                                    }
                                                    else if (type == 3)
                                                    {
                                                        <td>@item.NewsID</td>
                                                    }

                                                    <td>@item.Subject</td>
                                                    <td>@item.Message</td>
                                                    <td>

                                                        @if (item.Type == 1)
                                                        {
                                                            <p>Lời nhắn</p>
                                                        }
                                                        else if (item.Type == 2)
                                                        {
                                                            <p>Comment sản phẩm</p>
                                                        }
                                                        else if (item.Type == 3)
                                                        {
                                                            <p>Comment tin tức</p>
                                                        }
                                                        else
                                                        { <p>@item.Type</p>}
                                                    </td>
                                                    <td>
                                                        @if (item.Status)
                                                        {
                                                            <button class="alert alert-success" onclick="changeStatus(@item.ID,this)">Có</button>

                                                        }
                                                        else
                                                        {
                                                            <button class="alert alert-danger" onclick="changeStatus(@item.ID,this)">Không</button>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (item.ShowOnHome)
                                                        {
                                                            <button class="alert alert-success" onclick="changeShowOnHome(@item.ID,this)">Có</button>

                                                        }
                                                        else
                                                        {
                                                            <button class="alert alert-danger" onclick="changeShowOnHome(@item.ID,this)">Không</button>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-outline-danger" onclick="deleteFeedback(@item.ID)">Xoá</button>
                                                    </td>
                                                </tr>
                                                id++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            @*<script>
            function exportExcel() {
                $.ajax({
                    url: '@Url.Action("ExportExcel")',
                    dataType: 'json',
                    type: 'POST',
                    success: function (res) { window.location.href = res.filePath},
                });
            }
        </script>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

<!-- Page specific script -->
<script>
    $(function () {
        $("#example1").DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        }).buttons().container().appendTo('#example1 .col-md-6:eq(0)');
    });
    function deleteFeedback(id) {
        $.ajax({
            data: {id : parseInt(id)},
            url: '@Url.Action("DeleteFeedBack", "FromCustomer")',
            dataType: 'json',
            type: 'POST',
            success: function (res) {
                location.reload();
            },
        });
    }
    function changeStatus(id,btn) {
        $.ajax({
            data: {id : parseInt(id)},
            url: '@Url.Action("ChangeFeedbackStatus", "FromCustomer")',
            dataType: 'json',
            type: 'POST',
            success: function (res) {
                if (res.status == true) {
                    if (btn.className == 'alert alert-success') {
                        btn.className = 'alert alert-danger';
                        btn.innerText = 'Không';
                    }
                    else if (btn.className == 'alert alert-danger') {
                        btn.className = 'alert alert-success';
                        btn.innerText =  'Có';
                    }
                }
            },
        });
    }
    function changeShowOnHome(id, btn) {
        $.ajax({
            data: {id : parseInt(id)},
            url: '@Url.Action("ChangeFeedbackShowOnHome", "FromCustomer")',
            dataType: 'json',
            type: 'POST',
            success: function (res) {
                if (res.status == true) {
                    if (btn.className == 'alert alert-success') {
                        btn.className = 'alert alert-danger';
                        btn.innerText = 'Không';
                    }
                    else if (btn.className == 'alert alert-danger') {
                        btn.className = 'alert alert-success';
                        btn.innerText = 'Có';
                    }
                }
            },
        });
    }
</script>
